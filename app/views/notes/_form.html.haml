= form_for([@company, @book, @record, @note], remote: true) do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_area :content, placeholder: "Type note here."
  .actions
    = f.submit 'Save'
